    "inversify-express-utils": "^6.3.2",
    "reflect-metadata": "^0.1.13",
    "socket.io-client": "^2.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.1",
    "@types/helmet": "^0.0.42",
    "@types/node": "^10.12.21",
    "@types/socket.io-client": "^1.4.32",
    "cross-env": "^5.2.0",
    "nodemon": "^1.18.9"
  }
