{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "declarationMap": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../core",
    }
  ]
}