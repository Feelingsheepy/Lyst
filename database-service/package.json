    "debug": "cross-env NODE_ENV=development nodemon -w ./dist --inspect=127.0.0.1:9236"
  },
  "nodemonConfig": {
    "delay": 1500
  },
  "devDependencies": {
    "@types/mongodb": "^3.3.11",
    "@types/node": "^10.17.5",
    "cross-env": "^5.2.1",
    "nodemon": "^1.19.4"
  },
  "dependencies": {
    "mongodb": "^3.3.4"
  }
}
