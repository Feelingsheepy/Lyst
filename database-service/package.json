{
  "name": "lyst-database-service",
  "version": "1.0.0",
  "description": "Service to interface with the database",
  "author": "dhusted",
  "private": true,
  "main": "dist/bootstrap.js",
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b -w",
